
{
    "manifest_version": 3,
    "name": "ToothLit",
    "version": "1.0",
    "description": "Toggles dark mode for the current website and remembers your choice.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_title": "Toggle Dark Mode",
        "default_icon": {
            "16": "icons/icon-off-16.png",
            "32": "icons/icon-off-32.png"
        }
    },
    "icons": {
        "16": "icons/icon-off-16.png",
        "32": "icons/icon-off-32.png",
        "48": "icons/icon-off-48.png",
        "128": "icons/icon-off-128.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["dark-mode.css"],
            "matches": ["<all_urls>"]
        }
    ]
}
